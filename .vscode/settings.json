{
  "mocha.path": "node_modules/.bin/mocha",
  "mocha.nycPath": "node_modules/.bin/nyc",
  "mocha.runTestsOnSave": "true",
  "mocha.debugSettingsName": "test",
  "mocha.files.glob": "test/**/*.js",
  "mocha.requires": ["@babel/register"],
  "mocha.coverage": {
    "enable": true,
    "decoration": true,
    "runWithInterval": false,
    "autoUpdateInterval": 20000,
    "activeOnStart": true,
    "runAfterTest": false,
    "runCoverageAfterFileSave": false,
    "reporters": ["text", "html"]
  }
}
